<controls:MetroWindow x:Class="PlanetCreator.WPF.UI.wnd_OpenDefault"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" Title="Select default" Height="200" Width="200"
        ResizeMode="CanMinimize" EnableDWMDropShadow="True" WindowTransitionsEnabled="False"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="ListBoxContainer" MouseDoubleClick="ListBoxContainer_OnMouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</controls:MetroWindow>
